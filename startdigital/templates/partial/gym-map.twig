{# views/map.twig #}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Gym Map</title>

  {# your appâ€™s compiled CSS #}
  <link rel="stylesheet"
        href="{{ function('get_stylesheet_directory_uri') }}/templates/partial/mapOpen/open_layers_map-main.b8fcd409.css">
  {# OpenLayers core CSS #}
  <link rel="stylesheet"
        href="https://cdn.jsdelivr.net/gh/openlayers/openlayers.github.io@master/en/v6.4.3/css/ol.css">
  {# another compiled CSS chunk #}
  <link rel="stylesheet"
        href="{{ function('get_stylesheet_directory_uri') }}/templates/partial/mapOpen/open_layers_map-main.1d93180b.css">

  {# Google Fonts #}
  <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@200;300;400;700&amp;display=swap"
        rel="stylesheet">
</head>
<body>

<section class="pl-4 pr-4 w-full" id="open-layers-map-wrapper">
  <div id="column-wrapper"
       class="!pt-0 border-2 border-black flex h-full lg:aspect-video lg:overflow-hidden  max-lg:pb-8 max-lg:pt-6 max-md:gap-6 max-w-[1200px] mb-6 mt-6 mx-auto relative rounded-[35px] section w-full">

    {# left column #}
    <div id="column-one"
         class="bg-brandRed duration-300 flex flex-col gym-options h-full map-box--child md:max-lg:container md:pb-6 overflow-scroll overflow-x-hidden transition-all"
         style="width:100%;max-width:600px;max-height:700px;min-height:700px;">

      <div id="state-buttons"
           class="bg-brandRed flex lg:px-6 max-md:px-6 md:gap-3 md:py-6 state-button-group sticky text-white top-0 z-10">
        <button class="font-bold text-sm" disabled>Select your state:</button>
        <button type="button" data-state="ALL" class="state-button text-sm" id="state-all">All</button>
        <button type="button" data-state="WA" class="selected state-button text-sm" id="state-wa">WA</button>
        <button type="button" data-state="NSW" class="state-button text-sm" id="state-nsw">NSW</button>
        <button type="button" data-state="SA" class="state-button text-sm" id="state-sa">SA</button>
        <button type="button" data-state="VIC" class="state-button text-sm" id="state-vic">VIC</button>
      </div>

      <div class="flex gap-4 items-center pb-4 pl-6 pr-6 text-xs uppercase">
        <span class="flex-shrink-0 text-white">Or</span>
        <hr class="border-t-brandBlack flex-grow">
      </div>

      <div id="search-container" class="pb-4 px-6">
        <input id="address-search"
               class="!px-3.5 !rounded-full bg-white flex-shrink-0 max-md:my-4 pac-target-input pb-4 placeholder:text-black/60 pt-4 text-xs w-full">
      </div>

      <div id="gym-list">
        <div class="flex items-center justify-center mt-12">
          <span class="map-loader"></span>
        </div>
      </div>
    </div>

    {# swipe instruction for mobile #}
    <div id="swipe-instruct"
         class="bg-[#dd2b32] container flex font-bold gap-3 items-center justify-center lg:hidden m-0 max-w-full p-[15px] text-center text-white w-full">
      <svg xmlns="http://www.w3.org/2000/svg" xml:space="preserve" fill="currentColor" viewBox="0 0 512 248"
           class="rotate-180 w-4">
        <path d="M506.1 109.8 401.6 5.8c-7.8-7.8-20.5-7.8-28.3.1-7.8 7.8-7.8 20.5.1 28.3l70.2 69.8H20c-11 0-20 9-20 20s9 20 20 20h423.6l-70.2 69.8c-7.8 7.8-7.9 20.5-.1 28.3 7.8 7.8 20.5 7.9 28.3.1l104.5-104c7.9-7.9 7.8-20.6 0-28.4z"/>
      </svg>
      <span>Swipe to navigate</span>
      <svg xmlns="http://www.w3.org/2000/svg" xml:space="preserve" fill="currentColor" viewBox="0 0 512 248"
           class="w-4">
        <path d="M506.1 109.8 401.6 5.8c-7.8-7.8-20.5-7.8-28.3.1-7.8 7.8-7.8 20.5.1 28.3l70.2 69.8H20c-11 0-20 9-20 20s9 20 20 20h423.6l-70.2 69.8c-7.8 7.8-7.9 20.5-.1 28.3 7.8 7.8 20.5 7.9 28.3.1l104.5-104c7.9-7.9 7.8-20.6 0-28.4z"/>
      </svg>
    </div>

    {# right column with the map #}
    <div id="column-two"
         class="gym-options map-box--child"
         style="width:100%;max-width:600px;min-height:700px;">
      <div id="map" class="map" style="width:100%;height:100%"></div>
    </div>

  </div>
</section>

{# scripts #}
<script src="https://code.jquery.com/jquery-3.5.1.min.js" defer></script>


<script type="module"
        src="{{ function('get_stylesheet_directory_uri') }}/templates/partial/mapOpen/open_layers_map-main.9fa61445.js"></script>

<style>
  .option-wrapper {
    width: 80%;
    margin: auto;
  }
  @media (max-width: 600px) {
    .option-wrapper {
      margin-left: 15px;
    }
  }
</style>

</body>
</html>
