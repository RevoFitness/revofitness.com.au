<div data-info-window="{{ item.post_title }}" class="p-2.5 pt-0 flex flex-col gap-4 max-w-[350px]">
	<a href="{{ fn('get_the_permalink', item) }}" class="pr-8 w-fit outline-none text-2xl text-left font-bold text-brandRed hover:underline">{{ item.post_title }}</a>
	<div class="flex flex-col gap-2 text-xs sm:text-sm">
		{% if item.address or item.custom_address %}
			<div class="flex gap-2">
				<svg class="flex-shrink-0 mt-1" xmlns="http://www.w3.org/2000/svg" width="15" height="12.75" viewbox="0 0 15 12.75">
					<path id="svg_xml_base64_PHN2ZyB3aWR0aD0iMTgiIGhlaWdodD0iMTgiIHZpZXdCb3g9IjAgMCAxOCAxOCIgZmlsbD0ibm9uZSIgeG1sbnM9Imh0dHA6Ly93d3cudzMub3JnLzIwMDAvc3ZnIj48cGF0aCB" data-name="svg+xml;base64,PHN2ZyB3aWR0aD0iMTgiIGhlaWdodD0iMTgiIHZpZXdCb3g9IjAgMCAxOCAxOCIgZmlsbD0ibm9uZSIgeG1sbnM9Imh0dHA6Ly93d3cudzMub3JnLzIwMDAvc3ZnIj48cGF0aCB" d="M7.5,15V10.5h3V15h3.75V9H16.5L9,2.25,1.5,9H3.75v6Z" transform="translate(-1.5 -2.25)" fill="#1a171b"/>
				</svg>
				<span class="font-medium">{{ item.override_address ? item.custom_address : item.address }}</span>
			</div>
		{% endif %}

		{% if item.size %}
			<div class="flex items-center gap-2.5">
				<svg class="flex-shrink-0" xmlns="http://www.w3.org/2000/svg" width="13.5" height="13.5" viewbox="0 0 13.5 13.5">
					<path id="svg_xml_base64_PHN2ZyB3aWR0aD0iMTgiIGhlaWdodD0iMTgiIHZpZXdCb3g9IjAgMCAxOCAxOCIgZmlsbD0ibm9uZSIgeG1sbnM9Imh0dHA6Ly93d3cudzMub3JnLzIwMDAvc3ZnIj48cGF0aCB" data-name="svg+xml;base64,PHN2ZyB3aWR0aD0iMTgiIGhlaWdodD0iMTgiIHZpZXdCb3g9IjAgMCAxOCAxOCIgZmlsbD0ibm9uZSIgeG1sbnM9Imh0dHA6Ly93d3cudzMub3JnLzIwMDAvc3ZnIj48cGF0aCB" d="M2.25,3.75v3h1.5v-3h3V2.25h-3A1.5,1.5,0,0,0,2.25,3.75Zm1.5,7.5H2.25v3a1.5,1.5,0,0,0,1.5,1.5h3v-1.5h-3Zm10.5,3h-3v1.5h3a1.5,1.5,0,0,0,1.5-1.5v-3h-1.5Zm0-12h-3v1.5h3v3h1.5v-3A1.5,1.5,0,0,0,14.25,2.25Z" transform="translate(-2.25 -2.25)" fill="#1a171b"/>
				</svg>
				<span class="font-medium">{{ item.size }}
					sq/m</span>
			</div>
		{% endif %}

		{% if item.phone %}
			<div class="flex items-center gap-2.5">
				<svg class="flex-shrink-0" xmlns="http://www.w3.org/2000/svg" width="13.5" height="13.5" viewbox="0 0 13.5 13.5">
					<path id="svg_xml_base64_PHN2ZyB3aWR0aD0iMTgiIGhlaWdodD0iMTgiIHZpZXdCb3g9IjAgMCAxOCAxOCIgZmlsbD0ibm9uZSIgeG1sbnM9Imh0dHA6Ly93d3cudzMub3JnLzIwMDAvc3ZnIj48cGF0aCB" data-name="svg+xml;base64,PHN2ZyB3aWR0aD0iMTgiIGhlaWdodD0iMTgiIHZpZXdCb3g9IjAgMCAxOCAxOCIgZmlsbD0ibm9uZSIgeG1sbnM9Imh0dHA6Ly93d3cudzMub3JnLzIwMDAvc3ZnIj48cGF0aCB" d="M4.965,8.093a11.361,11.361,0,0,0,4.943,4.943l1.65-1.65a.746.746,0,0,1,.765-.18A8.555,8.555,0,0,0,15,11.632a.752.752,0,0,1,.75.75V15a.752.752,0,0,1-.75.75A12.749,12.749,0,0,1,2.25,3,.752.752,0,0,1,3,2.25H5.625a.752.752,0,0,1,.75.75A8.52,8.52,0,0,0,6.8,5.677a.753.753,0,0,1-.187.765Z" transform="translate(-2.25 -2.25)" fill="#1a171b"/>
				</svg>
				<a href="tel:{{ item.phone }}" class="font-medium">{{ item.phone }}</a>
			</div>
		{% endif %}

		{% if item.email %}
			<div class="flex items-center gap-2.5">
				<svg clsas="flex-shrink-0" xmlns="http://www.w3.org/2000/svg" width="15" height="12" viewbox="0 0 15 12">
					<path id="svg_xml_base64_PHN2ZyB3aWR0aD0iMTgiIGhlaWdodD0iMTgiIHZpZXdCb3g9IjAgMCAxOCAxOCIgZmlsbD0ibm9uZSIgeG1sbnM9Imh0dHA6Ly93d3cudzMub3JnLzIwMDAvc3ZnIj48cGF0aCB" data-name="svg+xml;base64,PHN2ZyB3aWR0aD0iMTgiIGhlaWdodD0iMTgiIHZpZXdCb3g9IjAgMCAxOCAxOCIgZmlsbD0ibm9uZSIgeG1sbnM9Imh0dHA6Ly93d3cudzMub3JnLzIwMDAvc3ZnIj48cGF0aCB" d="M15,3H3A1.5,1.5,0,0,0,1.507,4.5l-.007,9A1.5,1.5,0,0,0,3,15H15a1.5,1.5,0,0,0,1.5-1.5v-9A1.5,1.5,0,0,0,15,3Zm0,3L9,9.75,3,6V4.5L9,8.25,15,4.5Z" transform="translate(-1.5 -3)" fill="#1a171b"/>
				</svg>
				<a href="mailto:{{ item.email }}" class="font-medium">{{ item.email }}</a>
			</div>
		{% endif %}
	</div>

	{# Images #}
	{% if item.gallery %}
		<div class="grid sm:grid-cols-2 gap-2.5">
			{% for image in item.gallery|slice(0, 2) %}
				<img src="{{ get_image(image).src|resize(500) }}" alt="{{ image.alt }}" class="aspect-16/9 sm:aspect-4/3 object-cover rounded-md w-full pointer-events-none">
			{% endfor %}
		</div>
	{% endif %}
</div>
