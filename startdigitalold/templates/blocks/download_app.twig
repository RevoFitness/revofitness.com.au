{% include 'icons-animated/curved-top.twig' with {
	class: 'max-lg:hidden'
} %}
<section id="download-app" class="download_app {{ class }} bg-lightPink md:max-2xl:!pt-8 2xl:!pt-0">
	<div class="container grid md:grid-cols-2 items-center gap-16 md:gap-8">
		<div class="max-md:order-2 w-full md:w-4/5 mx-auto relative">
			{% include 'partial/image.twig' with {
				image: get_image(options.global_download_app.image).src,
				alt: options.global_download_app.image.alt,
				class: 'clip-blob aspect-1/1 md:aspect-5/7 lg:aspect-[5/6] w-full object-cover pointer-events-none'
			} %}
			{% include 'icons/clip-blob.twig' %}
			{% include 'icons/rehvo.twig' with {
				class: 'absolute -top-[5vw] sm:top-[2vw] left-4 2xl:-left-10 w-[25vw] md:w-[10vw]',
				attributes: 'data-animate-spin'
			} %}
			{% include 'icons/peach.twig' with {
				class: 'absolute -bottom-10 sm:bottom-0 right-0 2xl:-right-10 w-[25vw] md:w-[10vw]',
				attributes: 'data-animate-spin'
			} %}
		</div>
		<div class="max-md:order-1 flex flex-col gap-4 md:gap-6 w-full">
			<div class="block-content">
				{{ options.global_download_app.content }}
			</div>
			<div class="flex gap-3 max-sm:w-full">
				{% if options.global_download_app.app_store_link %}
					<a href="{{ options.global_download_app.app_store_link }}" target="_blank">
						{% include 'icons/download-app-store.twig' with {
							class: 'max-sm:w-full max-lg:w-32'
						} %}
					</a>
				{% endif %}
				{% if options.global_download_app.google_play_link %}
					<a href="{{ options.global_download_app.google_play_link }}" target="_blank">
						{% include 'icons/download-google-play.twig' with {
							class: 'max-sm:w-full max-lg:w-32'
						} %}
					</a>
				{% endif %}
			</div>
			{% if options.global_download_app.upgrade_steps %}
				<div class="block-content my-1">
					<p class="font-bold">
						How to upgrade:
					</p>
					{% for item in options.global_download_app.upgrade_steps %}
						<div class="flex gap-3">
							<div class="bg-white border-2 border-brandBlack h-7 w-7 rounded-full flex items-center justify-center">
								<p class="font-extrabold">
									{{ loop.index }}
								</p>
							</div>
							<p class="w-fit">
								{{ item.step }}
							</p>
						</div>
					{% endfor %}
				</div>
			{% endif %}
		</div>
	</div>
</section>
