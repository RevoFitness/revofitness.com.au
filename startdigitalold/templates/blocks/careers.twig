<section class="bg-white remove-py">
	<div class="bg-brandRed inner-py rounded-top rounded-bottom flex flex-col gap-4 md:gap-8">
		<div class="container">
			<div class="block-content content-white">
				{{ block.top_content }}
			</div>
		</div>
		<div data-animate-stagger class="container grid md:grid-cols-2 xl:grid-cols-3 gap-3 lg:gap-6 xl:gap-y-10">
			{% if revo.jobAdder.jobs %}
				{% for item in revo.jobAdder.jobs %}
					<div class="flex flex-col gap-4 bg-white rounded-[50px] px-6 xl:px-10 py-7">
						<date class="text-brandBlack font-bold">{{ item.postedAt|date('M j, Y') }}</date>
						<span class="uppercase font-secondary text-brandRed font-bold text-3xl tracking-tight">{{ item.title }}</span>
						<p class="text-base">{{ item.summary }}</p>
						<span class="font-bold text-brandRed text-lg inline-block translate-y-2">Job Overview</span>
						<ul class="!list-disc text-base flex flex-col gap-1 ml-6">
							{% for bullet in item.bulletPoints %}
								<li>{{ bullet }}</li>
							{% endfor %}
						</ul>
						<a class="mt-auto button-outline w-full" href="{{ item.links.ui.self }}" target="_blank">View role</a>
					</div>
				{% endfor %}
			{% endif %}
		</div>
	</div>
</section>
