<div
	class="grid md:grid-cols-2 gap-6 md:mt-12">
	{# Level 2 #}
	<label data-price-toggle class="flex flex-col relative">
		<input type="radio" data-price-per-month class="customRadio !appearance-none opacity-0 bg-transparent m-0 absolute inset-0 z-10 cursor-pointer" name="membershipType" value="level-2"/>
		<div class="flex flex-col rounded-[60px] overflow-hidden">
			<div class="bg-brandPink text-brandBlack is-h3 p-6 text-center flex flex-col items-center justify-center">
				<div data-check class="border-brandBlack w-12 h-12 rounded-full border-2 mb-4">
					<div class="w-full h-full bg-white rounded-full border-2 border-brandRed flex items-center justify-center">
						{% include 'icons/tick.twig' %}
					</div>
				</div>
				Level Two
			</div>
			<div class="bg-pureWhite py-4 px-6 flex flex-col h-full">
				<div class="flex items-center gap-2 pt-2 pb-6">
					<div class="w-3/4 mx-auto flex justify-center gap-2">
						<div class="text-brandBlack text-6xl lg:text-8xl font-extrabold">
							$20
						</div>
						<div class="flex flex-col mt-4">
							<span class="text-sm sm:text-lg lg:text-2xl leading-[1] font-bold text-black">
								one-off payment
							</span>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="absolute top-10 md:top-0 -left-5 md:-left-10 -translate-y-1/2 z-10 pointer-events-none -rotate-[25deg]">
			{% include 'icons/most-popular.twig' with { class: 'animate-shake max-md:w-32' } %}
		</div>
	</label>

	{# Level 1 #}
	<label data-price-toggle class="flex flex-col relative">
		<input type="radio" data-price-per-month class="customRadio !appearance-none opacity-0 bg-transparent m-0 absolute inset-0 z-10 cursor-pointer" name="membershipType" value="level-1"/>
		<div class="flex flex-col rounded-[60px] overflow-hidden">
			<div class="bg-brandRed text-white is-h3 p-6 text-center flex flex-col items-center justify-center">
				<div data-check class="border-brandBlack w-12 h-12 rounded-full border-2 mb-4">
					<div class="w-full h-full bg-white rounded-full border-2 border-brandRed flex items-center justify-center">
						{% include 'icons/tick.twig' %}
					</div>
				</div>
				Level One
			</div>
			<div class="bg-pureWhite py-4 px-6 flex flex-col h-full">
				<div class="flex items-center gap-2 pt-2 pb-6">
					<div class="w-3/4 mx-auto flex justify-center gap-2">
						<div class="text-brandBlack text-6xl lg:text-8xl font-extrabold">
							$15
						</div>
						<div class="flex flex-col mt-4">
							<span class="text-sm sm:text-lg lg:text-2xl leading-[1] font-bold text-black">
								one-off payment
							</span>
						</div>
					</div>
				</div>
			</div>
		</div>
	</label>
</div>
