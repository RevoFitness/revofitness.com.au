<div class="internal-banner bg-white bg-opacity-60 relative md:min-h-[400px] lg:min-h-[550px] flex max-md:flex-col gap-10 md:items-center">
	<div class="container w-full relative flex md:items-center max-md:flex-col max-md:gap-10 max-md:pt-16">
		<div class="lg:w-2/5 block-content max-lg:mt-10">
			<span class="supertitle">Say hello to...</span>
			<h1 data-animate-left class="text-[2.75rem] md:text-[3.75rem] 2xl:text-7xl w-full">
				{{ post.title }}
			</h1>
		</div>
	</div>
	<div class="md:w-1/2 relative md:absolute right-0 ml-auto bg-opacity-100 bg-brandRed max-md:ml-10 md:mt-14 lg:mt-40 mb-10 flex items-center justify-center h-[250px] lg:h-[350px] rounded-l-full">
		{% if post.thumbnail %}
			{% include 'partial/image.twig' with {
				image: post.thumbnail.src,
				alt: post.thumbnail.alt,
				class: 'w-full h-full object-center 2xl:object-[25%] object-contain pointer-events-none'
			} %}
		{% endif %}
		{% include 'icons/peace-yellow.twig' with {
			class: 'absolute top-0 -left-4 z-10 w-20 lg:w-32',
			attributes: 'data-animate-spin'
		} %}
	</div>
</div>
